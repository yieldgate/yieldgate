{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "deployments/**", "artifacts/**", "typechain-types/**"]
    },
    "@yieldgate/frontend-yg#dev": {
      "dependsOn": ["@yieldgate/contracts#build"],
      "outputs": [".next/**", "deployments/**", "artifacts/**", "typechain-types/**"]
    },
    "@yieldgate/frontend-sfe#dev": {
      "dependsOn": ["@yieldgate/contracts#build"],
      "outputs": [".next/**", "deployments/**", "artifacts/**", "typechain-types/**"]
    },
    "@yieldgate/frontend-yg#build": {
      "dependsOn": ["@yieldgate/contracts#build"],
      "outputs": [".next/**", "deployments/**", "artifacts/**", "typechain-types/**"]
    },
    "@yieldgate/frontend-sfe#build": {
      "dependsOn": ["@yieldgate/contracts#build"],
      "outputs": [".next/**", "deployments/**", "artifacts/**", "typechain-types/**"]
    },
    "lint": {
      "outputs": []
    },
    "//#lint": {
      "outputs": []
    },
    "lint:fix": {},
    "//#lint:fix": {}
  },
  "globalDependencies": [".env", ".env.local", "tsconfig.json", ".eslintrc.json"],
  "globalEnv": [
    "PRIVATE_KEY_MUMBAI",
    "ALCHEMY_API_MUMBAI",
    "PRIVATE_KEY_RINKEBY",
    "ALCHEMY_API_RINKEBY",
    "ETHERSCAN_API_KEY",
    "NEXT_PUBLIC_PRODUCTION_MODE",
    "NEXT_PUBLIC_URL",
    "NEXT_PUBLIC_DEFAULT_CHAIN",
    "NEXT_PUBLIC_SUPPORTED_CHAINS",
    "NEXT_PUBLIC_RPC_1337",
    "NEXT_PUBLIC_RPC_1",
    "NEXT_PUBLIC_RPC_4",
    "NEXT_PUBLIC_RPC_5",
    "NEXT_PUBLIC_RPC_137",
    "NEXT_PUBLIC_RPC_80001",
    "MONGODB_URI",
    "MONGODB_DB"
  ]
}
