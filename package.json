{
  "name": "@yieldgate/monorepo",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "next": "^12.0.0",
        "@nomiclabs/hardhat-ethers": "0.3.0-beta.13",
        "ethers": "^5.0.0"
      }
    }
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "dev-yg": "turbo run dev --filter=!frontend-sfe",
    "dev-sfe": "turbo run dev --filter=!frontend-yg",
    "build-yg": "turbo run build --filter=!frontend-sfe",
    "build-sfe": "turbo run build --filter=!frontend-yg",
    "lint:all": "turbo run lint",
    "lint": "prettier . --check",
    "lint:fix:all": "turbo run lint:fix",
    "lint:fix": "prettier . --write",
    "dev:frontend-yg": "pnpm run --filter frontend-yg dev",
    "dev:frontend-sfe": "pnpm run --filter frontend-sfe dev",
    "deploy:contracts-yg": "pnpm run --filter contracts deploy-yg",
    "deploy:contracts-sfe": "pnpm run --filter contracts deploy-sfe",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "next": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "1.0.0-beta.24",
    "turbo": "^1.6.3",
    "typescript": "^4.9.3"
  }
}
