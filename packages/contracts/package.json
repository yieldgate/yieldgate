{
  "name": "@yieldgate/contracts",
  "license": "MIT",
  "version": "0.0.1",
  "scripts": {
    "clean": "pnpm hardhat clean",
    "compile": "pnpm hardhat compile",
    "build": "pnpm clean && pnpm compile",
    "test": "pnpm hardhat compile && pnpm hardhat test",
    "report-gas": "REPORT_GAS=true pnpm hardhat test",
    "coverage": "pnpm hardhat coverage",
    "chain": "pnpm hardhat node",
    "typechain": "pnpm hardhat typechain",
    "lint": "pnpm prettier --check && pnpm eslint && pnpm solhint",
    "lint:fix": "pnpm prettier --write && pnpm eslint --fix && pnpm solhint --fix",
    "prettier": "prettier --plugin=prettier-plugin-solidity .",
    "eslint": "eslint . --ext .js,.ts",
    "solhint": "solhint 'contracts/**/*.sol'",
    "deploy": "pnpm hardhat node --export './deployments/1337.json' --write true",
    "deploy:mumbai": "pnpm hardhat deploy --network mumbai --export './deployments/80001.json' --write true",
    "deploy:goerli": "pnpm hardhat deploy --network goerli --export './deployments/5.json' --write true",
    "verify:mumbai": "source .env && pnpm hardhat etherscan-verify --network mumbai --api-key $POLYGONSCAN_API_KEY",
    "verify:goerli": "pnpm hardhat etherscan-verify --network goerli"
  },
  "devDependencies": {
    "@defi-wonderland/smock": "^2.3.3",
    "@ethersproject/abi": "^5.6.4",
    "@ethersproject/providers": "^5.6.8",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.3",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@0.3.0-beta.13",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@openzeppelin/contracts": "^4.7.3",
    "@typechain/ethers-v5": "^10.1.1",
    "@typechain/hardhat": "^6.1.4",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.18.3",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "chai": "^4.3.6",
    "child-process-promise": "^2.2.1",
    "dayjs": "^1.11.4",
    "dotenv": "^16.0.1",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "ethers": "^5.6.9",
    "hardhat": "^2.12.2",
    "hardhat-deploy": "^0.11.20",
    "hardhat-gas-reporter": "^1.0.8",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.7.4"
  }
}
